@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="AddRole" asp-controller="Rol" class ="btn btn-info btn-sm my-2" >Yeni Rol Ekle</a>
<table class="table table-sm table-hover">
    <tr>
        <td>AD</td>
        <td>Rol güncelle (klasik veritabanı değer güncelleme )</td>
        <td>Rol sil (klasik veritabanı değer silme. )</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
        </tr>
    }

</table>

