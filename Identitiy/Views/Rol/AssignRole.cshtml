@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRoleAsync";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AssignRole" method="post" class="w-75 p-3 mx-auto">
    @for(int i =0;i<Model.Count;i++){
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists"/>
            <label  class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
            
        </div>

    }
    <input type="submit" value="Kaydet" class="btn btn-info"/>
</form>

